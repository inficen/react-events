{
  "name": "@inficen/react-events",
  "version": "1.0.0",
  "description": "Vanilla JS, React pub/sub implementation. Typescript friendly",
  "author": "Inficen",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./es/index.d.ts",
  "module": "./es/index.ts",
  "files": [
    "dist/**",
    "es/**"
  ],
  "scripts": {
    "clean": "rimraf dist es",
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc -p ./tsconfig.build.json",
    "build:cjs": "babel src --out-dir dist -x .ts --ignore **/*.test.ts && tsc ",
    "lint": "eslint ./src",
    "test": "jest",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/requireindex": "^1.2.0",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "babel-plugin-tsconfig-paths-module-resolver": "^1.0.3",
    "eslint": "^8.19.0",
    "husky": "^8.0.0",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.4.3",
    "prettier": "^2.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": "^14.17.0 || ^16.0.0 || >= 18.0.0",
    "pnpm": ">=5"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inficen/react-events.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "subscribe",
    "event",
    "pub",
    "sub",
    "pubsub",
    "typescript",
    "react"
  ]
}
